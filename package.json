{
  "name": "@arijusg/bogus-api",
  "version": "0.0.1",
  "description": "Api mocking framework",
  "main": "index.ts",
  "scripts": {
    "lint": "tslint --type-check --project tsconfig.json -c tslint.json 'src/**/*.ts'",
    "test": "export TS_NODE_CACHE='false' && nyc _mocha",
    "test-dev": "TS_NODE_CACHE='false' mocha -w",
    "test-dev-wip": "TS_NODE_CACHE='false' mocha -w --grep 'wip'",
    "pre-commit": "ts-node scripts/precommit.ts",
    "sonar": "sonar-scanner"    
  },
  "author": "Arijus Gilbrantas",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/arijusg/bogus-api.git",
    "type": "git"
  },
  "devDependencies": {
    "@types/chai": "4.0.4",
    "@types/mocha": "2.2.44",
    "@types/node": "8.0.47",
    "chai": "4.1.2",
    "mocha": "4.0.1",
    "nyc": "11.3.0",
    "pre-commit": "1.2.2",
    "sonarqube-scanner": "2.0.2",
    "source-map-support": "0.5.0",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "tslint-sonarts": "1.1.1",
    "typescript": "2.6.1"
  },
  "pre-commit": [
    "pre-commit"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "all": true
  }
}
